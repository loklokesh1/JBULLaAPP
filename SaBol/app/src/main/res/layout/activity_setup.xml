<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".UserRegister.SetupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Profile Photo"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="Click profile \nimage to select \nyour Image."
        android:textColor="#B11616"
        android:textSize="12dp"
        android:textStyle="italic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="4dp"
        android:background="@drawable/btn"
        />


    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimg"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_logo"
        android:hint="UserName"
        android:padding="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#818185"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullName"
        android:layout_below="@id/userName"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_logo"
        android:hint="FullName"
        android:padding="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#818185"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:layout_below="@+id/fullName"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_logo"
        android:hint="Country"
        android:padding="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#818185"
        />

    <ProgressBar
        android:id="@+id/progess"
        style="?android:attr/progressBarStyle"
        android:layout_width="138dp"
        android:layout_height="59dp"
        android:layout_below="@id/country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/saveprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progess"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Save Profile"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
</RelativeLayout>