<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:content=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="10dp"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/menuicon"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        app:title="Bol"
        app:titleTextColor="@android:color/white"
        tools:targetApi="lollipop">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/toolbarlogoname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pacifico"
                android:padding="6dp"
                android:text="Mahammad"
                android:layout_marginLeft="45dp"
                android:textColor="@color/blacknavcolar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SearchView
                android:layout_width="wrap_content"
                android:id="@+id/toolbarsearch"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="47dp"
                android:id="@+id/toolbarprofileimage"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/profile1"
                app:civ_border_color="@color/blacknavcolar"
                app:civ_border_width="2.50dp"
                />


            <!--            <ImageView-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_width="110dp"-->
            <!--                android:padding="6dp"-->
            <!--                android:src="@drawable/text_logo"-->

            <!--                />-->

        </LinearLayout>

        <!-- navigation button and title for the Toolbar-->
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>

