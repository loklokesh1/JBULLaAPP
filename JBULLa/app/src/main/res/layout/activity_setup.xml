<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_margin="10dp"
    tools:context=".UserRegister.SetupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Profile Photo"
        android:fontFamily="@font/salsa"
        android:textColor="#C91B0606"
        android:textSize="30dp"
        android:textStyle="bold"
        />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:layout_marginTop="100dp"-->
<!--        android:fontFamily="@font/salsa"-->
<!--        android:text="Click profile \nimage to select \nyour Image."-->
<!--        android:textColor="#B11616"-->
<!--        android:textSize="12dp"-->
<!--        android:textStyle="italic" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile1"
        android:background="@drawable/circle_background_profile"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cameraicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:background="@color/white"
        android:visibility="visible"
        android:src="@drawable/cameraicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/salsa"
        android:textColor="#000000"
        android:layout_below="@id/logoimg"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FullName"
        android:fontFamily="@font/salsa"
        android:layout_marginLeft="18dp"
        android:textColor="#000000"
        android:layout_below="@id/userName"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Name"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/salsa"
        android:textColor="#000000"
        android:layout_below="@id/fullName"

        />
    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimg"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_logo"
        android:hint="UserName"
        android:fontFamily="@font/salsa"
        android:padding="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#818185"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullName"
        android:layout_below="@id/userName"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_logo"
        android:hint="FullName"
        android:fontFamily="@font/salsa"
        android:padding="14dp"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#818185"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:layout_below="@+id/fullName"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_logo"
        android:hint="Country"
        android:fontFamily="@font/salsa"
        android:padding="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColorHint="#818185"
        />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="138dp"
        android:layout_height="59dp"
        android:layout_below="@id/country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/setup_saveprofile"
        android:fontFamily="@font/salsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/btn"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Save Profile"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textAllCaps="false"
        />
</RelativeLayout>
</ScrollView>