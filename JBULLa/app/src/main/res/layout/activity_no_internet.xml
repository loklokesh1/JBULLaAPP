<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshlayoutnowifi"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="35dp"
    tools:context=".NoInternetActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:orientation="vertical"
        android:fadeScrollbars="false"
        android:isScrollContainer="false"
        android:paddingLeft="15dp"
        tools:context="com.mahammadjabi.jbulla.NoInternetActivity"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/nointernet"
        android:src="@drawable/nowifi"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/warring"
        android:fontFamily="@font/salsa"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nointernet"
        android:layout_centerHorizontal="true"
        android:text="No Internet Connection \nPlease connect your Modile data or Wifi\nPlease Connect Internet and then Refresh"
        android:textColor="#951E15"
        android:textAlignment="center"
        android:lineHeight="25dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/warring"
        android:background="@drawable/btn"
        android:text="Try Again"
        android:drawableLeft="@drawable/reseticon"
        android:fontFamily="@font/salsa"
        android:id="@+id/tryagain"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="69dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>